server-width = 	320px
server-height = 490px
server-img-width = 	392px
server-deg = 8deg
.Server
	.list
		font-size 0
		padding-bottom 30px
		text-align center
		cursor default
		dd
		.bg-img
		.bg-color
			display inline-block
			width server-width
			height server-height
		dd
			animated(.2s)
			position relative
			font-size 18px
			background-color #ddd
			transform:skew(-(server-deg), 0)
			overflow hidden
			background-position-y 0
			&:hover
				transform skew(-(server-deg), 0) translateY(-15px)
				box-shadow 1px 10px 15px rgba(0,0,0,.4)
				z-index 5
				.bg-img
					filter blur(5px)
				.bg-color
					opacity .5
				.content
					.icon
					h6
						background-color rgba(255,255,255,0)
					.icon
						transform translateY(-50px)
					h6
						delayTime(.1s)
						transform translateY(-95px)
					.line
						delayTime(.2s)
						opacity 1
						transform translateY(-88px)
					p
						opacity 1
						&:nth-child(5)
							delayTime(.3s)
							transform translateY(-65px)
						&:nth-child(6)
							delayTime(.4s)
							transform translateY(-50px)
					
		.bg-img
		.bg-color
			animated(.2s)
			width server-img-width
		.bg-color
		.content
			width 100%
			height 100%
			position absolute
			top 0
			left 0
		.bg-img
			z-index 1
			background-image url('../images/server.png')
			background-size (server-img-width * 4) server-height
			transform skew(server-deg, 0) translate(-38px, 0)
		.bg-color
			z-index 2
			background-color base-color-1-light
			opacity 0
		.content
			z-index 3
			width 250px
			transform skew(server-deg, 0)
			left 34px
			// text-shadow 1px 1px rgba(255,255,255,.5)
			.icon
			h6
				animated(.5s)
				display inline-block
				background-color rgba(255,255,255,.8)
			.icon
				width 55px
				height 55px
				padding 15px
				border-radius 50%
				background-image url('../images/icon.png')
				margin 150px 0 30px
				background-position-x 0
			h6
				font-weight bold
				letter-spacing 5px
				padding 15px 20px
			.line
				animated(.5s)
				opacity 0
				height 4px
				background-color base-color-1
				margin 0 100px
				border-radius 2px
				position relative
				&:before
					content ''
					display inline-block
					width 8px
					height 4px
					border-radius 2px
					background-color base-color-2
					position absolute
					top 0
					left -12px
			p
				animated(.5s)
				opacity 0
				font-size 18px
				font-weight bold
				letter-spacing 5px
		for num in 1 2 3 4
			dd:nth-child({num})
				.bg-img
					background-position-x - server-img-width * (num - 1)
				.icon
					background-position-y -85px * (num - 1)
	


box-size = 140px

.Process
	text-align center
	background-color #fafafa
	.list
		padding-bottom 80px
		dd
			position relative
			display inline-block
			margin-left 25px
			margin-right 25px
			cursor default
			div
				font-size 14px
				font-weight bold
				letter-spacing 2px
				width box-size
				height box-size
				line-height box-size + 35px
				border-radius 50%
				border 2px dashed #aaa
				position relative
				z-index 1
				box-sizing border-box
				overflow hidden
				background-position center 40px
				background-size 30px auto
				background-repeat no-repeat
			&:nth-child(1) > div
				background-image url('../images/icons/prototype.png')
			&:nth-child(2) > div
				background-image url('../images/icons/UI.png')
			&:nth-child(3) > div
				background-image url('../images/icons/skill.png')
			&:nth-child(4) > div
				background-image url('../images/icons/test.png')
			&:nth-child(5) > div
				background-image url('../images/icons/maintain.png')
			&:first-child
				margin-left 0
			&:last-child
				margin-right 0
			&:after
			&:before
				content ''
				width box-size
				height box-size
				border-radius 50%
				position absolute
			&:after
				background-color rgba(138, 196, 249, .15)
				top -8px
				left -8px
			&:before
				background-color rgba(249, 197, 134, .2)
				top 8px
				left 8px



