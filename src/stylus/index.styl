@import "./reset"
@import "./config"


menuWidth = 95px + 10px
.header
	width 100%
	height 50px
	line-height 50px
	background-color rgba(255,255,255,.8)
	position fixed
	top 0
	left 0
	z-index 100
	box-shadow 0 2px 5px rgba(0,0,0,.1)
	.logo
		width 137px
		height 24px
		float left
		margin-top 8px
		background-image url('../images/logo.png')
	.menu
		float right
		position relative
		a
		&:before
			width 95px
			margin-left 10px
		a
			display inline-block
			text-align center
			font-size 13px
			letter-spacing 2px
			color base-color-1
		&:before
			animated(.1s)
			content ''
			position absolute
			bottom 0
			height 3px
			background-color base-color-1
		&.stand-1:before
			left menuWidth*0
		&.stand-2:before
			left menuWidth*1
		&.stand-3:before
			left menuWidth*2
		&.stand-4:before
			left menuWidth*3
		&.stand-5:before
			left menuWidth*4
			
		

.banner
	font-size 34px
	height 500px
	padding-top 110px
	width 100%
	background-image url('../images/banner.jpg')
	background-size 100% auto
	background-repeat no-repeat
	box-sizing border-box
	cursor default
	.cn
		color white
		font-weight bold
		letter-spacing 6px
		margin-top 25px
		margin-bottom 10px
		text-shadow 1px 1px #555,
			2px 2px #666,
			3px 3px #777,
			4px 4px #888,
			5px 5px #999,
			6px 6px #aaa,
			7px 7px #bbb
	.en
		font-size 14px
		color base-color-1
		font-variant small-caps
		line-height 1.7em
		letter-spacing 3px
	p
		opacity 0
		&:nth-child(3)
		&:nth-child(4)
			margin-left 35px
		&:nth-child(5)
		&:nth-child(6)
			margin-left 70px
	&.Animated
		p
			animation-name animate-left-show
			animation-duration .3s
			animation-timing-function linear
			animation-fill-mode forwards
			for num in 1 2 3 4 5 6
				&:nth-child({num})
					animation-delay num * .4s


@keyframes animate-left-show
	0%
		transform translateX(30px)
	100%
		transform translateX(0)
		opacity 1

.head
	font-size 20px
	text-align center
	line-height 30px
	padding-top 50px
	padding-bottom 30px
	letter-spacing 5px
	h5
		font-weight bold
